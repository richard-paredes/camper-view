<% include ../partials/header %>

    <div class="row">
        <h1 class="text-center">Edit Comment </h1>
        <div style="width:30%; margin:0 auto; padding: 1.25%">
            <form action="/campgrounds/<%=campground_slug%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <textarea class="form-control" rows="5" cols="33" name="comment[text]" required>
                        <%=comment.text%>
                    </textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Edit Comment</button>
                </div>
            </form>
            <a href='/campgrounds' class="">Go Back To Campgrounds</a>
        </div>
    </div>

<% include ../partials/footer %>