<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="text-center">Add New Comment to <%=campground.name%></h1>
        <div style="width:30%; margin:0 auto; padding: 1.25%">
            <form action="/campgrounds/<%=campground.slug%>/comments" method="POST">
                <div class="form-group">
                    <textarea class="form-control" rows="5" cols="33" placeholder="Comment" name="comment[text]" required></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Add Comment</button>
                </div>
            </form>
            <a href='/campgrounds' class="">Go Back To Previous Campground</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>